<%- model_class = FarmersMarket -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:website) %></th>
      <th><%= model_class.human_attribute_name(:facebook) %></th>
      <th><%= model_class.human_attribute_name(:street) %></th>
      <th><%= model_class.human_attribute_name(:city) %></th>
      <th><%= model_class.human_attribute_name(:county) %></th>
      <th><%= model_class.human_attribute_name(:state) %></th>
      <th><%= model_class.human_attribute_name(:zip) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @farmers_markets.each do |farmers_market| %>
      <tr>
        <td><%= link_to farmers_market.id, farmers_market_path(farmers_market) %></td>
        <td><%= farmers_market.name %></td>
        <td><%= farmers_market.website %></td>
        <td><%= farmers_market.facebook %></td>
        <td><%= farmers_market.street %></td>
        <td><%= farmers_market.city %></td>
        <td><%= farmers_market.county %></td>
        <td><%= farmers_market.state %></td>
        <td><%= farmers_market.zip %></td>
        <td><%=l farmers_market.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_farmers_market_path(farmers_market), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      farmers_market_path(farmers_market),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_farmers_market_path,
            :class => 'btn btn-primary' %>
